<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manageroutes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hereroutes.ManageRoute">

    <!-- Map View -->
    <com.here.sdk.mapview.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Circular Map Style Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_map_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Change Map Style"
        android:src="@android:drawable/ic_menu_mapmode"
        app:backgroundTint="@android:color/white"
        app:tint="@android:color/black"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/fab_my_location"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- My Location FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="My Location"
        android:src="@android:drawable/ic_menu_mylocation"
        app:backgroundTint="@android:color/white"
        app:tint="@android:color/black"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/bottom_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Full Screen Search Overlay -->
    <LinearLayout
        android:id="@+id/search_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:elevation="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Search Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/search_background"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/back_search_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@android:drawable/ic_menu_revert" />

            <AutoCompleteTextView
                android:id="@+id/search_autocomplete"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search for origin location..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:completionThreshold="1"
                android:dropDownHeight="wrap_content"
                android:dropDownWidth="match_parent"
                android:popupBackground="@android:color/white" />

            <ImageButton
                android:id="@+id/clear_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Clear search"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Search Suggestions Area -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

    </LinearLayout>

    <!-- Bottom Container -->
    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Compact Search Bar (when not active) -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/search_background"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/search_hint_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="Search for origin location..."
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Place Details Container -->
        <LinearLayout
            android:id="@+id/place_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <!-- Place Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_place_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Selected Place Name" />

                <TextView
                    android:id="@+id/tv_place_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="123 Example Street, City, Country" />

                <TextView
                    android:id="@+id/tv_place_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/place_type_background"
                    android:padding="6dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    tools:text="Restaurant" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/location_actions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_save_location"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_outline"
                    android:text="Save"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_menu_save"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_add_destination"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary"
                    android:text="Add Destination"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_menu_directions"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_add_waypoint"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_accent"
                    android:text="Add Waypoint"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_menu_add"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Route Actions (visible when route is being created) -->
            <LinearLayout
                android:id="@+id/route_actions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_save_route"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary"
                    android:text="Save Route"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_menu_save"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_clear_route"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_outline"
                    android:text="Clear Route"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                    android:drawablePadding="8dp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Route Summary (when route is created) -->
        <LinearLayout
            android:id="@+id/route_summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/route_summary_background"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_directions"
                    app:tint="@color/primary_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_route_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        tools:text="2.5 km" />

                    <TextView
                        android:id="@+id/tv_route_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        tools:text="8 mins" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_start_navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/button_primary"
                    android:text="Start"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>