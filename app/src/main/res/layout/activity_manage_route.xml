<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manageroutes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hereroutes.ManageRoute">

    <!-- Map View -->
    <com.here.sdk.mapview.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Circular Map Style Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_map_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Change Map Style"
        android:src="@android:drawable/ic_menu_mapmode"
        app:backgroundTint="@android:color/white"
        app:tint="#1A1A1A"
        app:fabSize="mini"
        app:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/fab_my_location"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- My Location FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="My Location"
        android:src="@android:drawable/ic_menu_mylocation"
        app:backgroundTint="@android:color/white"
        app:tint="#1A1A1A"
        app:fabSize="mini"
        app:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Full Screen Search Overlay -->
    <LinearLayout
        android:id="@+id/search_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:elevation="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Search Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/modern_search_background"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/back_search_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/modern_round_button"
                android:contentDescription="Back"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="#1A1A1A" />

            <AutoCompleteTextView
                android:id="@+id/search_autocomplete"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search for origin location..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:textColorHint="#757575"
                android:fontFamily="sans-serif-medium"
                android:completionThreshold="1"
                android:dropDownHeight="wrap_content"
                android:dropDownWidth="match_parent"
                android:popupBackground="@android:color/white" />

            <ImageButton
                android:id="@+id/clear_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/modern_round_button"
                android:contentDescription="Clear search"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone"
                app:tint="#757575" />

        </LinearLayout>

        <!-- Search Suggestions Area -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

    </LinearLayout>

    <!-- Bottom Container -->
    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/modern_bottom_container"
        android:elevation="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Compact Search Bar (when not active) -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/modern_search_bar"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#757575" />

            <TextView
                android:id="@+id/search_hint_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="Search for origin location..."
                android:textSize="16sp"
                android:textColor="#757575"
                android:fontFamily="sans-serif-medium"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Place Details Container (Single Location) -->
        <LinearLayout
            android:id="@+id/place_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <!-- Place Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_place_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    tools:text="Selected Place Name" />

                <TextView
                    android:id="@+id/tv_place_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="15sp"
                    android:textColor="#616161"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    tools:text="123 Example Street, City, Country" />

                <TextView
                    android:id="@+id/tv_place_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/modern_place_type_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    tools:text="Restaurant" />

            </LinearLayout>

            <!-- Single Location Action Buttons -->
            <LinearLayout
                android:id="@+id/location_actions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_save_location"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_button_outline"
                    android:text="Save"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableTop="@android:drawable/ic_menu_save"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_clear_location"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_button_outline"
                    android:text="Clear"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableTop="@android:drawable/ic_menu_close_clear_cancel"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_add_destination"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_button_primary"
                    android:text="Destination"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableTop="@android:drawable/ic_menu_directions"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:elevation="3dp" />

                <Button
                    android:id="@+id/btn_add_waypoint"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_button_accent"
                    android:text="Waypoint"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableTop="@android:drawable/ic_menu_add"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:elevation="3dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Clean Route Summary Container -->
        <LinearLayout
            android:id="@+id/route_summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/modern_route_summary_background"
            android:visibility="gone">

            <!-- Compact Route Summary Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_directions"
                    app:tint="@color/primary_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Origin → Destination -->
                    <TextView
                        android:id="@+id/tv_route_origin_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2dp"
                        tools:text="Home → Office" />

                    <!-- Distance and Duration -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tv_route_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="sans-serif-medium"
                            tools:text="2.5 km" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" • "
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tv_route_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="sans-serif-medium"
                            tools:text="8 mins" />

                        <!-- Waypoint Count -->
                        <TextView
                            android:id="@+id/tv_waypoint_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" • 2 waypoints"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:fontFamily="sans-serif-medium"
                            android:visibility="gone"
                            tools:text=" • 2 waypoints" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_expand_route"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/modern_round_icon_button"
                    android:src="@android:drawable/ic_menu_more"
                    android:contentDescription="Expand route details"
                    app:tint="@color/primary_color"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- Route Action Buttons (Save, Clear, Add Waypoint) -->
            <LinearLayout
                android:id="@+id/route_actions_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:paddingTop="0dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_save_route"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_button_primary"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableTop="@android:drawable/ic_menu_save"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:elevation="3dp" />

                <Button
                    android:id="@+id/btn_clear_route"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_button_outline"
                    android:text="Clear"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableTop="@android:drawable/ic_menu_close_clear_cancel"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btn_add_waypoint_route"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/modern_button_accent"
                    android:text="Waypoint"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:drawableTop="@android:drawable/ic_menu_add"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:elevation="3dp" />

            </LinearLayout>

            <!-- Expandable Route Details Container -->
            <LinearLayout
                android:id="@+id/route_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/modern_route_details_background"
                android:elevation="4dp">

                <!-- Route Details Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="@drawable/modern_route_header_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Route Details"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Route Stops Container (Scrollable) -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/route_stops_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp" />

                </ScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>